<Window x:Class="практическая__7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:практическая__7"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Window.Resources>
        <local:Doctor x:Key="DoctorReg"/>
        <local:Doctor x:Key="DoctorLogin"/>
        <local:Patient x:Key="PatientLogin"/>
        <local:Patient x:Key="PatientSearch"/>
        <local:Patient x:Key="PatientReception"/>
        <local:FileCount x:Key="UsersCount"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="150"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
     
        <!--Регистрация пользователя-->
        <StackPanel HorizontalAlignment="Left" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">
            <TextBlock Text="Регистрация пользователя" FontSize="19" Margin="5 0 0 0"/>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="1">
            <Label Content="Имя:"/>
            <Label Content="Фамилия:"/>
            <Label Content="Отчество:"/>
            <Label Content="Специализация:"/>
            <Label Content="Придумайте пароль:"/>
            <Label Content="Подтвердите пароль:"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1">
            <StackPanel.DataContext>
                <Binding Source="{StaticResource DoctorReg}"/>
            </StackPanel.DataContext>
            <TextBox Margin="4.5" Text="{Binding Name, Mode=OneWayToSource}"/>
            <TextBox Margin="4.5" Text="{Binding LastName, Mode=OneWayToSource}"/>
            <TextBox Margin="4.5" Text="{Binding MiddleName, Mode=OneWayToSource}"/>
            <TextBox Margin="4" Text="{Binding Specialisation, Mode=OneWayToSource}"/>
            <TextBox Margin="4" Text="{Binding Password, Mode=OneWayToSource}"/>
            <TextBox Margin="4" Text="{Binding Password, Mode=OneWayToSource}"/>
            <Button Width="120" Height="20" Content="Зарегистрироваться" HorizontalAlignment="Right" Margin="0 5 5 0" Click="Registr_Click"/>
        </StackPanel>

        <!--Вход пользователя-->
        <StackPanel HorizontalAlignment="Left" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2">
            <TextBlock Text="Вход пользователя" FontSize="19" Margin="5 0 0 0"/>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="3">
            <Label Content="Идентификатор:"/>
            <Label Content="Пароль:"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="3">
            <StackPanel.DataContext>
                <Binding Source="{StaticResource DoctorLogin}"/>
            </StackPanel.DataContext>
            <TextBox Margin="4.5" Text="{Binding ID, Mode=OneWayToSource}"/>
            <TextBox Margin="4.5" Text="{Binding Password, Mode=OneWayToSource}"/>
            <Button Width="60" Height="20" Content="Войти" HorizontalAlignment="Right" Margin="0 5 5 0" Click="Login_Click"/>
        </StackPanel>

        <!--Информация о пользователе-->
        <StackPanel HorizontalAlignment="Left" Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2">
            <TextBlock Text="Информация о пользователе" FontSize="19" Margin="5 0 0 0"/>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="5">
            <Label Content="ID:"/>
            <Label Content="Имя:"/>
            <Label Content="Фамилия:"/>
            <Label Content="Отчество:"/>
            <Label Content="Специализация:"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="5">
            <StackPanel.DataContext>
                <Binding Source="{StaticResource DoctorLogin}"/>
            </StackPanel.DataContext>
            <TextBlock Margin="5" Text="{Binding ID, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Margin="5" Text="{Binding Name, Mode=OneWay}"/>
            <TextBlock Margin="5" Text="{Binding LastName, Mode=OneWay}"/>
            <TextBlock Margin="5" Text="{Binding MiddleName, Mode=OneWay}"/>
            <TextBlock Margin="5" Text="{Binding Specialisation, Mode=OneWay}"/>
        </StackPanel>

        <!--Поиск пациента по идентификатору-->
        <StackPanel HorizontalAlignment="Left" Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="2">
            <TextBlock Text="Поиск пациента" FontSize="19"/>
        </StackPanel>
        <StackPanel Grid.Column="2" Grid.Row="1" Grid.RowSpan="3">
            <Label Content="Введите ID пациента:"/>
            <StackPanel Grid.Column="2" Grid.Row="1" Grid.RowSpan="3" Margin="0 25">
                <Label Content="Имя:"/>
                <Label Content="Фамилия:"/>
                <Label Content="Отчество:"/>
                <Label Content="Дата рождения:"/>
                <Label Content="Последняя встреча:"/>
                <Label Content="Последний врач:"/>
                <Label Content="Диагноз:"/>
                <Label Content="Рекомендации:"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="3" Grid.Row="1" Grid.RowSpan="3">
            <StackPanel.DataContext>
                <Binding Source="{StaticResource PatientReception}"/>
            </StackPanel.DataContext>
            <TextBox Margin="4" Text="{Binding ID, Mode=OneWayToSource}"/>
            <Button Width="80" Height="20" Content="Найти" HorizontalAlignment="Right" Margin="0 5 5 0" Click="PatientAdmission_Click"/>
            <StackPanel Grid.Column="5" Grid.Row="4" Grid.RowSpan="3">
                <StackPanel.DataContext>
                    <Binding Source="{StaticResource PatientReception}"/>
                </StackPanel.DataContext>
                <TextBlock Margin="5" Text="{Binding Name, Mode=OneWay}"/>
                <TextBlock Margin="4" Text="{Binding LastName, Mode=OneWay}"/>
                <TextBlock Margin="4" Text="{Binding MiddleName, Mode=OneWay}"/>
                <TextBlock Margin="5" Text="{Binding Birthday, Mode=OneWay}"/>
                <TextBox Margin="5" Text="{Binding LastAppointment, Mode=TwoWay}"/>
                <TextBox Margin="4" Text="{Binding LastDoctor, Mode=TwoWay}"/>
                <TextBox Margin="4" Text="{Binding Diagnosis, Mode=TwoWay}"/>
                <TextBox Margin="5" Text="{Binding Recomendations, Mode=TwoWay}"/>
                <Button Width="80" Height="20" Content="Сохранить" HorizontalAlignment="Right" Margin="0 5 5 0" Click="SaveReception_Click"/>
            </StackPanel>
        </StackPanel>

        <!--Регистрация пациента-->
        <StackPanel HorizontalAlignment="Left" Grid.Column="4" Grid.Row="0" Grid.ColumnSpan="2">
            <TextBlock Text="Регистрация пациента" FontSize="19" Margin="5 0 0 0"/>
        </StackPanel>
        <StackPanel Grid.Column="4" Grid.Row="1">
            <Label Content="Имя:"/>
            <Label Content="Фамилия:"/>
            <Label Content="Отчество:"/>
            <Label Content="Дата рождения:"/>
        </StackPanel>
        <StackPanel Grid.Column="5" Grid.Row="1">
            <StackPanel.DataContext>
                <Binding Source="{StaticResource PatientLogin}"/>
            </StackPanel.DataContext>
            <TextBox Margin="4.5" Text="{Binding Name, Mode=OneWayToSource}"/>
            <TextBox Margin="4.5" Text="{Binding LastName, Mode=OneWayToSource}"/>
            <TextBox Margin="4.5" Text="{Binding MiddleName, Mode=OneWayToSource}"/>
            <TextBox Margin="4" Text="{Binding Birthday, Mode=OneWayToSource}"/>
            <Button Width="120" Height="20" Content="Зарегистрироваться" HorizontalAlignment="Right" Margin="0 5 5 0" Click="RegistrPatient_Click"/>
        </StackPanel>

        <!--Информация о пациенте-->
        <StackPanel HorizontalAlignment="Left" Grid.Column="4" Grid.Row="2" Grid.ColumnSpan="2">
            <TextBlock Text="Изменение информации о пациенте" FontSize="19" Margin="5 0 0 0"/>
        </StackPanel>

        <StackPanel Grid.Column="4" Grid.Row="3">
            <Label Content="Введите ID пациента:"/>
        </StackPanel>
        <StackPanel Grid.Column="4" Grid.Row="4" Grid.RowSpan="3">
            <Label Content="Имя:"/>
            <Label Content="Фамилия:"/>
            <Label Content="Отчество:"/>
            <Label Content="Дата рождения:"/>
            
        </StackPanel>
        <StackPanel Grid.Column="5" Grid.Row="3" Grid.RowSpan="3">
            <StackPanel.DataContext>
                <Binding Source="{StaticResource PatientSearch}"/>
            </StackPanel.DataContext>
            <TextBox Margin="4" Text="{Binding ID, Mode=OneWayToSource}"/>
            <Button Width="80" Height="20" Content="Найти" HorizontalAlignment="Right" Margin="0 5 5 0" Click="Search_Click"/>
        </StackPanel>
        <StackPanel Grid.Column="5" Grid.Row="4" Grid.RowSpan="3">
            <StackPanel.DataContext>
                <Binding Source="{StaticResource PatientSearch}"/>
            </StackPanel.DataContext>
            <TextBox Margin="5" Text="{Binding Name, Mode=TwoWay}"/>
            <TextBox Margin="4" Text="{Binding LastName, Mode=TwoWay}"/>
            <TextBox Margin="4" Text="{Binding MiddleName, Mode=TwoWay}"/>
            <TextBox Margin="5" Text="{Binding Birthday, Mode=TwoWay}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="4" Grid.Row="4" Grid.RowSpan="3">
                <StackPanel.DataContext>
                    <Binding Source="{StaticResource PatientSearch}"/>
                </StackPanel.DataContext>
                <Button Width="80" Height="20" Content="Сбросить" HorizontalAlignment="Right" Margin="0 5 5 0" Click="Reset_Click"/>
                <Button Width="80" Height="20" Content="Сохранить" HorizontalAlignment="Right" Margin="0 5 5 0" Click="Save_Click"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="4">
            <StackPanel.DataContext>
                <Binding Source="{StaticResource UsersCount}"/>
            </StackPanel.DataContext>
            <Label FontSize="18" Content="Количество пользователей:"/>
            <TextBlock FontSize="18" Margin="0 5" Text="{Binding DoctorCount, Mode=OneWay}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="4">
            <StackPanel.DataContext>
                <Binding Source="{StaticResource UsersCount}"/>
            </StackPanel.DataContext>
            <Label FontSize="18" Content="Количество пациентов:"/>
            <TextBlock FontSize="18" Margin="0 5" Text="{Binding PatientCount, Mode=OneWay}"/>
        </StackPanel>
    </Grid>
</Window>
