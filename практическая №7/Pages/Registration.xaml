<Page x:Class="практическая__7.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:практическая__7"
      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="450" d:DesignWidth="600"
      Title="Registration">

    <Page.Resources>
        <local:Doctor x:Key="DoctorLogin"/>
    </Page.Resources>

    <Page.DataContext>
        <Binding Source="{StaticResource DoctorLogin}"/>
    </Page.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="220"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--Регистрация пользователя-->
        <StackPanel HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2">
            <TextBlock Text="Регистрация пользователя" FontSize="19" Margin="5 0 0 0"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="2">
            <Label Content="Имя:"/>
            <Label Content="Фамилия:"/>
            <Label Content="Отчество:"/>
            <Label Content="Специализация:"/>
            <Label Content="Придумайте пароль:"/>
            <Label Content="Подтвердите пароль:"/>
        </StackPanel>
        <StackPanel Grid.Column="2" Grid.Row="2">
            <TextBox Margin="4.5" Text="{Binding Name, Mode=OneWayToSource}"/>
            <TextBox Margin="4.5" Text="{Binding LastName, Mode=OneWayToSource}"/>
            <TextBox Margin="4.5" Text="{Binding MiddleName, Mode=OneWayToSource}"/>
            <TextBox Margin="4" Text="{Binding Specialisation, Mode=OneWayToSource}"/>
            <TextBox Margin="4" Text="{Binding Password, Mode=OneWayToSource}"/>
            <TextBox Margin="4" Text="{Binding Password, Mode=OneWayToSource}"/>
            <Button Width="120" Height="20" Content="Зарегистрироваться" HorizontalAlignment="Right" Margin="0 5 5 0" Click="Regestration_Click" />
            <Button Width="80" Height="20" Content="Назад" HorizontalAlignment="Right" Margin="0 5 5 0" Click="GoBack_Click" />
        </StackPanel>
    </Grid>
</Page>
