<Page x:Class="практическая__7.ChangingPatient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:практическая__7"
      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="450" d:DesignWidth="600"
      Title="ChangingPatient">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="300"/>
        </Grid.RowDefinitions>

        <!--Изменение пациента-->
        <StackPanel HorizontalAlignment="Left" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">
            <TextBlock Text="Изменение информации пациента" FontSize="19"/>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="1" Grid.RowSpan="3">
            <Label Content="Имя:"/>
            <Label Content="Фамилия:"/>
            <Label Content="Отчество:"/>
            <Label Content="Номер телефона:"/>
            <Label Content="Дата рождения:"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1" Grid.RowSpan="3">
            <TextBox Margin="4" Text="{Binding Name, Mode=OneWay}"/>
            <TextBox Margin="4" Text="{Binding LastName, Mode=OneWay}"/>
            <TextBox Margin="4" Text="{Binding MiddleName, Mode=OneWay}"/>
            <TextBox Margin="5" Text="{Binding Number, Mode=TwoWay}"/>
            <TextBox Margin="5" Text="{Binding Birthday, Mode=OneWay}"/>
            <Button Width="80" Height="20" Content="Сохранить" HorizontalAlignment="Right" Margin="0 5 5 0" Click="Save_Click" />
            <Button Width="80" Height="20" Content="Назад" HorizontalAlignment="Right" Margin="0 5 5 0" Click="GoBack_Click" />
        </StackPanel>
    </Grid>
</Page>
