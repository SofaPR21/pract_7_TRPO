<Page x:Class="практическая__7.Reception"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:практическая__7"
      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="450" d:DesignWidth="600"
      Title="Reception">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Margin="5" Width="80" Height="20" Content="Назад" HorizontalAlignment="Right" Click="GoBack_Click" />
            <Button Margin="5" Width="140" Height="20" Click="Change_Click">Изменить информацию</Button>
        </StackPanel>
        <ListView Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ListView Grid.Row="1" Grid.RowSpan="3" ItemsSource="{Binding patient.AppointmentStories}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="Black">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Последняя дата приема: "/>
                                <TextBlock Text="{Binding LastAppointment}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Последний врач: "/>
                                <TextBlock Text="{Binding LastDoctor}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Диагноз: "/>
                                <TextBlock Text="{Binding Diagnosis}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Рекомендации: "/>
                                <TextBlock Text="{Binding Recomendations}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

       
        <Label Content="Прием пациента: " FontSize="16" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="3"/>
        <StackPanel Grid.Column="1" Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="3">
            <Label Content="Последняя встреча:"/>
            <TextBox Margin="5" Text="{Binding LastAppointment, Mode=TwoWay}"/>
            <Label Content="Последний врач:"/>
            <TextBox Margin="4" Text="{Binding LastDoctor, Mode=TwoWay}"/>
            <Label Content="Диагноз:"/>
            <TextBox Margin="4" Text="{Binding newAppointmentStories.Diagnosis, Mode=TwoWay}"/>
            <Label Content="Рекомендации:"/>
            <TextBox Margin="5" Text="{Binding newAppointmentStories.Recomendations, Mode=TwoWay}"/>
            <Button Width="80" Height="20" Content="Сохранить" HorizontalAlignment="Right" Margin="0 5 5 0" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Page>
