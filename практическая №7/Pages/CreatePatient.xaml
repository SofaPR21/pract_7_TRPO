<Page x:Class="практическая__7.CreatePatient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:практическая__7"
      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="450" d:DesignWidth="600"
      Title="CreatePatient">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="200"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--Регистрация пациента-->
        <StackPanel HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2">
            <TextBlock Text="Регистрация Пациента" FontSize="19" Margin="5 0 0 0"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="2">
            <Label Content="Имя:"/>
            <Label Content="Фамилия:"/>
            <Label Content="Отчество:"/>
            <Label Content="Номер телефона:"/>
            <Label Content="Дата рождения:"/>
        </StackPanel>
        <StackPanel Grid.Column="2" Grid.Row="2">
            <TextBox Margin="4.5" Text="{Binding Name, Mode=OneWayToSource}"/>
            <TextBox Margin="4.5" Text="{Binding LastName, Mode=OneWayToSource}"/>
            <TextBox Margin="4.5" Text="{Binding MiddleName, Mode=OneWayToSource}"/>
            <TextBox Margin="4" Text="{Binding Number, Mode=OneWayToSource}"/>
            <TextBox Margin="4" Text="{Binding Birthday, Mode=OneWayToSource}"/>
            <Button Width="120" Height="20" Content="Зарегистрировать" HorizontalAlignment="Right" Margin="0 5 5 0" Click="Registration_Click"/>
            <Button Width="80" Height="20" Content="Назад" HorizontalAlignment="Right" Margin="0 5 5 0" Click="GoBack_Click" />
        </StackPanel>
    </Grid>
</Page>
